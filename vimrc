set nocompatible
set nu                  "显示行号
set tabstop=4           "tab长度四个空格
set expandtab           "tab转成space
set autoindent
set smartindent         "继承上一行的缩进
set wildmenu
set ruler
set showmatch           "匹配括号
syntax enable
set encoding=utf8
set smarttab
set shiftwidth=4
set splitright
set hlsearch            "高亮搜索词            
"set backspace=2        "退格键删除
set mouse=a             "鼠标可以定位光标
"colorscheme desert
"set bg=dark
